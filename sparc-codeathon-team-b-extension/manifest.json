{
  "manifest_version": 3,
  "name": "SparcFuse",
  "version": "1.0",
  "description": "",
  "permissions": ["downloads", "scripting", "activeTab", "webRequest"],
  "host_permissions": ["<all_urls>", "*://localhost/*", "*://127.0.0.1/*"],

  "content_scripts": [
    {
      "matches": ["*://*.sparc.science/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "Sparc Dataset Converter"
  },
  "icons": {
    "48": "icons/download.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/download.png", "icons/button.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
